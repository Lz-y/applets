<view class='container'>
  <i-panel>
    <i-input title='标题' value="{{feedback.title}}" maxlength='60' placeholder='请输入反馈标题' bindchange='inputTitle'></i-input>
    <i-input title='联系方式' value="{{feedback.contact}}" maxlength='11' placeholder='请输入联系方式（选填）' bindchange='inputContact'></i-input>
    <i-input type='textarea' title='留言内容' value="{{feedback.content}}" maxlength='600' placeholder='请输入留言内容' bindchange='inputContent'></i-input>
  </i-panel>
  <i-button type='success' size="small" bind:click='save'>保存</i-button>
  <i-toast id='toast'></i-toast>
</view>
