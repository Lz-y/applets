page {
  width: 100%;
  height: 100%;
}
.container{
  background:#f1f1f1;
}
.position{
  padding: 0 10px;
  font-size:14px;
  background:#fff;
  padding-bottom:10px;
}
.title{
  line-height:30px;
}
.posiconte{
  display:flex;
  justify-content:center;
  align-items:center;
  border:1px solid #f1f1f1;
  width:110px;
  border-radius:13px;
  font-size:12px;
  padding:4px 8px;
}
.hotcity{
  margin-top:10px;
  background:#fff;
  font-size:14px;
  padding: 0 10px;
}
.ul{
  overflow:hidden;
  font-size: 13px;
}
.li{
  float:left;
  width:54px;
  text-align:center;
  border:1px solid #f1f1f1;
  margin:0 8px 8px 0;
  border-radius:12px;
  padding:2px;
}
.i-index-item {
  padding: 10px;
  border-bottom:1px solid #f1f1f1;
  font-size: 14px;
  background:#fff;
}
