<view class="i-class i-panel">
  <view wx:if="{{ title }}" class="i-panel-title {{ hideTop ? 'i-panel-title-hide-top' : ''}}">
    <text class='i-title-class'>{{ title }}</text>
    <slot name='more'></slot>
  </view>
  <view class="i-panel-content {{ hideBorder ? 'i-panel-without-border' : '' }}">
    <slot></slot>
  </view>
</view>